#!/bin/sh
### BEGIN INIT INFO
# Provides: screeninvader-lounge
# Required-Start: xserver janosh-lounge
# Required-Stop:
# Should-Start:
# Should-Stop:
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Starts the screeinvader components
# Description:
### END INIT INFO

PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin
COMPONENTS="notify ipfs ip_osd background cache playlist player shairport browser pdf sound show history mouse keyboard websocket"

set -e

. /lib/lsb/init-functions
export DISPLAY=:0

case "$1" in
  start)
  for comp in $COMPONENTS; do 
      log_daemon_msg "Starting $comp"
      start-stop-daemon --start --background --pidfile /var/run/$comp.lua.pid --make-pidfile -d /lounge/lua/ --startas /bin/bash -- -l -c "export HOME=/lounge; export USER=lounge;cd /lounge/lua; exec sudo -u lounge /lounge/bin/janosh -vf /lounge/lua/$comp.lua &> /var/log/$comp.log"
      log_end_msg $?
  done
    ;;

  stop)

  for comp in $COMPONENTS; do
    log_daemon_msg "Stopping $comp"
    start-stop-daemon -s TERM --stop --oknodo --pidfile /var/run/$comp.lua.pid --retry 10
    log_end_msg $?
  done
    ;;

  restart)
    $0 stop
    $0 start
    ;;

  *)
    N=/etc/init.d/$NAME
    echo "Usage: $N {start|stop|restart}" >&2
    exit 1
    ;;
esac

exit 0
